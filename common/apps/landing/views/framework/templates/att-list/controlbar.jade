.atl-controls-bar
	.atl-control#vu-meter
		//meter( low='0.2', high='0.9', optimum='0.5', value='0.8')
		#audio-control
		img(src="/landing/images/vu-meter.png", style="position:absolute; z-index=2")

	.atl-control(data-id="microphone")
		include images/mic.svg
	.atl-control.slashed(style="display:none", data-id="microphone-slashed")
		include images/mic-slashed.svg

	.atl-control(data-id="camera")
		include images/camera.svg
	.atl-control.slashed(style="display:none", data-id="camera-slashed")
		include images/camera-slashed.svg

	.atl-control(data-id="speaker")
		include images/speaker.svg

	.atl-control(data-id="play")
		include images/play.svg

	.atl-control(data-id="writiing-control")
		include images/writiing-disabled.svg
	
	.atl-control(data-id="kickout")
		include images/kickout.svg
